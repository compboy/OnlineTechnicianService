<div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body">
        <h1 class="text-center mb-3"><i class="fas fa-user-plus"></i> Add job</h1>
        <%- include('./partials/messages.ejs') %>
        <form action="/users/addJob" method="POST">
          <div class="form-group">
            <label for="name">Customer name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>

          <div class="form-group">
            <label for="device">Device name </label>
            <input
              type="device"
              id="device"
              name="device"
              class="form-control"
              placeholder="Enter Device Name"
              value="<%= typeof device != 'undefined' ? device : '' %>"
            />
          </div>

          <div class="form-group">
            <label for="problem">Problem of the device </label>
            <input
              type="problem"
              id="problem"
              name="problem"
              class="form-control"
              placeholder="Provide device problems in details."
              value="<%= typeof problem != 'undefined' ? problem : '' %>"
          </div>

          <div class="form-group">
            <label for="location">Service Location </label>
            <input
              type="location"
              id="location"
              name="location"
              class="form-control"
              placeholder="Location"
              value="<%= typeof location != 'undefined' ? location : '' %>"
            />
          </div>

          <button type="submit" class="btn btn-primary btn-block">
            Submit
          </button>
        </form>
      </div>
    </div>
  </div>